# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#00AFFF"
        color_bad  = "#DC322F"
        color_degraded = "#B58900"
        interval = 5
}

order += "ethernet tun0"
order += "ethernet tun1"
order += "wireless wlp3s0"
order += "ethernet enp9s0"
order += "volume master"
order += "battery 1"
order += "tztime local"

wireless wlp3s0 {
        format_up = "%quality %bitrate"
        format_down = ""
}

ethernet enp9s0 {
        # if you use %speed, i3status requires root privileges
        format_up = "%speed"
        format_down = ""
}

ethernet tun0 {
        format_up = "SYD1"
        format_down = ""
}

ethernet tun1 {
        format_up = "LAX1"
        format_down = ""
}

battery 1 {
        format = "%status %percentage %remaining"
        integer_battery_capacity = true
        last_full_capacity = true
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

volume master {
        format = "%volume"
        format_muted = "%volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        color_degraded = "#00AFFF"
}
